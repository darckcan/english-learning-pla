{
  "name": "nexus-fluent",
  "version": "1.0.0",
  "description": "Plataforma de aprendizaje de ingl√©s - Nexus Fluent",
  "build": {
    "method": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "deployment": {
    "type": "web",
    "port": 80,
    "protocol": "http",
    "healthCheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  },
  "resources": {
    "memory": "768Mi",
    "cpu": "0.5"
  },
  "env": {
    "NODE_ENV": "production"
  }
}
